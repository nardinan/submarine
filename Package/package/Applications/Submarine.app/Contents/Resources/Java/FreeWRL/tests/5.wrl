#  Prototypes

WorldInfo {
	title "Test"
	info ["VRML Model of a test", "Foo"]
}

PROTO Arr [
	field SFColor color 0 0 0
] {
	Group {
	  children [
		Shape {
			appearance DEF APP Appearance {
				material Material {
					diffuseColor IS color
				}
			}
			geometry Cylinder {
				radius 0.02
				height 1
			}
		}
		Transform {
		   translation 0 0.5 0
		   children [
		   	Shape {
				appearance USE APP
				geometry Cone {
					height 0.1
					bottomRadius 0.04
				}
			}
		   ]
		}
	  ]
	 }
}


Transform {
scale 3 3 3
translation -1.5 -1.5 -1.5
children [

	Group {
	children [
	Transform {
	 translation 0 0.5 0
	 children Arr {color 0 1 0}
	}
	Transform {
	 translation 0 0 0.5
	 rotation 1 0 0 1.6
	 children Arr {color 0 0 1}
	}
	Transform {
	 translation 0.5 0 0
	 rotation 0 0 1 -1.6
	 children Arr {color 1 0 0}
	}

	Transform {
	 translation 0.5 0.5 0.5
	 children Shape {
		appearance Appearance { material Material { diffuseColor 0.9 0.9 0.1 }}
		geometry Box { size 0.5 0.5 0.5 }
	 }
	}
	]
	}
]
}
